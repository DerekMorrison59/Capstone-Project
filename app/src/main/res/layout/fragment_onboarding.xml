<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.derekmorrison.networkmusicplayer.ui.OnboardingFragment"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/headphone_background"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/primary_light"
            android:alpha=".8"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:contentDescription="@string/welcome_message"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_instructions"
                android:contentDescription="@string/instructions_tap_to_start"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />
            </LinearLayout>
        </FrameLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button"
            android:contentDescription="@string/start_button_desc"
            android:id="@+id/start_button"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary"
            style="@style/TabLabel"
            android:layout_marginTop="60dp" />

    </LinearLayout>
</FrameLayout>