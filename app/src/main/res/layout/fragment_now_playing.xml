<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.derekmorrison.networkmusicplayer.ui.NowPlayingFragment"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/generic_cover"
        android:id="@+id/albumImageView"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        android:orientation="horizontal"


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Artist"
                android:id="@+id/artistLabelTV"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:id="@+id/titleLabelTV"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Album"
                android:id="@+id/albumLabelTV"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Duration"
                android:id="@+id/durationLabelTV"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Robert Palmer"
                android:id="@+id/artistTV"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Looking for Clues"
                android:id="@+id/titleTV"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Clues"
                android:id="@+id/albumTV"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="4:16"
                android:id="@+id/durationTV"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
