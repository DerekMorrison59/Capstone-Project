<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!--<item name="colorUnfocused">@color/tab_text_unfocused</item>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLabel">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSongTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSongArtist">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSongTitleWidget">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_widget_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSongArtistWidget">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_widget_subtitle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
